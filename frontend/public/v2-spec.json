{
  "openapi": "3.1.0",
  "info": {
    "title": "Insurance V2 API",
    "description": "Modern V2 API for insurance products",
    "version": "2.0.0"
  },
  "paths": {
    "/api/v2/policy/{policyId}": {
      "get": {
        "summary": "Get Policy Details",
        "description": "Get comprehensive policy information",
        "operationId": "get_policy_v2",
        "parameters": [
          {
            "name": "policyId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "title": "Policy ID"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "policyNumber": {"type": "string"},
                    "status": {"type": "string"},
                    "type": {"type": "string"},
                    "customerId": {"type": "string"},
                    "createdDate": {"type": "string"},
                    "coverage": {
                      "type": "object",
                      "properties": {
                        "amount": {"type": "number"},
                        "premium": {"type": "number"},
                        "type": {"type": "string"}
                      }
                    },
                    "beneficiaries": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {"type": "string"},
                          "relationship": {"type": "string"},
                          "percentage": {"type": "number"}
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}