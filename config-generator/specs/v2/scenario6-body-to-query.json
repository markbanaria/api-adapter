{
  "openapi": "3.0.0",
  "info": {
    "title": "Policy Search API V2",
    "version": "2.0.0"
  },
  "paths": {
    "/api/v2/policies/search": {
      "post": {
        "operationId": "searchPolicies",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "customerId": {"type": "string"},
                  "policyType": {"type": "string"},
                  "status": {"type": "string"}
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "List of matching policies",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "policyNumber": {"type": "string"},
                      "policyType": {"type": "string"}
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}